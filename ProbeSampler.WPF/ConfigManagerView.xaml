<rxui:ReactiveUserControl
    x:Class="ProbeSampler.WPF.ConfigManagerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:rxui="http://reactiveui.net"
    xmlns:viewmodel="clr-namespace:ProbeSampler.Presentation;assembly=ProbeSampler.Presentation"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:ProbeSampler.WPF"
    xmlns:helpers="clr-namespace:ProbeSampler.WPF.Helpers"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="viewmodel:ConfigManagerViewModel"
    FontWeight="Medium"
    FontSize="14"
    mc:Ignorable="d"
    x:Name="ManagerView">
    <materialDesign:Card
        Margin="8,8,8,8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <DockPanel 
                Margin="8,8"
                LastChildFill="False">
                <Button
                    x:Name="btnAddNewConConf"
                    ToolTip="Добавить новое подключение"
                    Margin="8,8">
                    <StackPanel
                        Orientation="Horizontal">   
                        <TextBlock
                            Text="Создать"/>
                        <materialDesign:PackIcon
                            Margin="4,.5,0,0"
                            Kind="AddNetwork" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnLogIn"
                    Visibility="Collapsed"
                    Grid.Column="1"
                    Margin="0,0,8,0"
                    ToolTip="Сохранить пароль">
                    <StackPanel
                        Orientation="Horizontal">
                        <TextBlock
                            Text="Авторизоваться"/>
                        <materialDesign:PackIcon
                            Margin="4,.5,0,0"
                            Kind="Login" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnLogOut"
                    Visibility="Visible"
                    Grid.Column="1"
                    Margin="0,0,8,0"
                    Style="{StaticResource MaterialDesignFlatAlertButton}"
                    ToolTip="Выйти">
                    <StackPanel
                            Orientation="Horizontal">
                        <TextBlock
                            Text="Выйти"/>
                        <materialDesign:PackIcon
                            Margin="4,.5,0,0"
                            Kind="Logout" />
                    </StackPanel>
                </Button>
                <TextBlock
                    x:Name="AuthPasswordSucces"
                    Grid.Row="0"
                    Grid.Column="5"
                    FontWeight="UltraBlack"
                    Foreground="Green"
                    Text="Вы успешно вошли!"
                    Margin="8,24"/>
                <TextBlock
                    x:Name="AuthPasswordFailure"
                    Grid.Row="0"
                    Grid.Column="5"
                    Foreground="Red"
                    FontWeight="UltraBlack"
                    Text="Неверный пароль"
                    Margin="8,24"/>
            </DockPanel>
            
